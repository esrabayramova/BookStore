<html>
    <head>
        <title>Books</title>
        <link rel="icon" type="image/png" href = "">
	    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">   <!-- integrity and crossorigin attributes -->
        
        <style>
            .cover{
                width: 125px;
                height: 200px;
            }
            .boook{
                display: inline-block;
                height: 350px;
                width: 300px;
                /*margin-top: 100px;
                margin-bottom: 50px;
                margin-right: 50px;
                margin-left: 100px;*/
                border-bottom: 2px black groove;
                padding: 50px;
            }
            .bookname{
                color:slategrey;
                text-decoration: none;
                font-size: 25px;
            }
            .bookname:hover{
                color: #2E9AFE;
            }
            .flx{
                display: flex;
                flex-wrap: wrap;
                margin-left: 100px;
            }
            body{
                background: linear-gradient(rgb(200, 228, 252), ghostwhite);
            }
        </style>
    </head>
    <body>
        <%- include('partials/header.ejs') %>
        <div class="flx">
        <% books.forEach( (book) => { %>
            <div class="boook">
                <img src="images/<%= book.book_pic %>" class="cover">
                <br><br><br>
                <a href="/<%=book.title%>" class="bookname"><i class="fas fa-hand-point-right"></i>   <%= book.title %></a>
            </div>
            <% }) %>
        </div>
            <%- include('partials/footer.ejs') %>
    </body>
</html>