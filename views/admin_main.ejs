<html>
    <head>
        <title>Books</title>
        <link rel="icon" type="image/png" href = "">
	    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">   <!-- integrity and crossorigin attributes -->
        
        <style>
            body{
                text-align: center;
            }
            header{
                background-color: #2E9AFE;
                height: 35px;
            }
            .cover{
                width: 125px;
                height: 200px;
            }
            .boook{
                display: inline-block;
                height: 350px;
                width: 300px;
                /*margin-top: 100px;
                margin-bottom: 50px;
                margin-right: 50px;
                margin-left: 100px;*/
                border-bottom: 2px black groove;
                padding: 50px;
            }
            .bookname{
                color:slategrey;
                text-decoration: none;
                font-size: 25px;
            }
            .bookname:hover{
                color: #2E9AFE;
            }
            .flx{
                display: flex;
                flex-wrap: wrap;
                margin-left: 100px;
            }
            body{
                background: linear-gradient(rgb(212, 235, 255), ghostwhite);

            }
            #addbook{
                color: #2E9AFE;
                font-size: 25px;
                text-decoration: none;
            }
            #addbook:hover{
                background-color: #2E9AFE;
                color: aliceblue;
                font-size: 30px;
            }
            .adminfunc{
                text-decoration: none;
                color: #2E9AFE;
                font-size: 20px;
            }
        </style>
    </head>
    <body>
        <header></header>
        <a href="/addbook" id="addbook"><i class="fas fa-plus-circle"></i>   Add new book.</a><br><br>
        <a href="/admin" id="addbook"><i class="fas fa-sign-out-alt"></i>>   Log out.</a>
        <div class="flx">
        <% books.forEach( (book) => { %>
            <div class="boook">
                <img src="/images/<%= book.book_pic %>" class="cover">
                <br><br><br>
                <a class="bookname"><i class="fas fa-hand-point-right"></i>   <%= book.title %> - <%= book.price %></a><br><br>
                <a href="/updatebook/<%= book.title %>" class="adminfunc"><i class="far fa-edit"></i>   Update the price</a><br><br>
                <a href="/deletebook/<%= book.title %>" class="adminfunc"><i class="fas fa-trash-alt"></i>   Delete the book</a>
            </div>

            <% }) %>
        </div>
            <%- include('partials/footer.ejs') %>
    </body>
</html>